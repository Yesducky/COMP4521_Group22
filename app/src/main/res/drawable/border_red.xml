<!-- res/drawable/radio_button_border.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <!-- Change to your desired color -->
            <corners android:radius="4dp"/>
            <stroke android:color="#000000" android:width="3dp"/> <!-- Change to your desired color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <!-- Change to your desired color -->
            <corners android:radius="4dp"/>
            <stroke android:color="#FFFFFF" android:width="3dp"/> <!-- Change to your desired color -->
        </shape>
    </item>
</selector>